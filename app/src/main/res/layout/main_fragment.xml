<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment"
    android:background="@drawable/background_main" >
    
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizon_main1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/searchView1"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.appcompat.widget.SearchView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10.7dp"
        android:layout_marginEnd="10.7dp"
        android:layout_marginTop="70.3dp"
        android:id="@+id/searchView"
        android:theme="@style/SearchViewTheme"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/searchView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/scrollview_main"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/horizon_main1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFF">


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>