<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/FrameLayout"
        android:background="@drawable/background_main"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollview_main">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.4dp"
            android:layout_marginStart="21.4dp"
            android:text="찐방"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="@color/text" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21.4dp"
            android:layout_marginTop="100dp"
            android:text="진짜로 보는 방"
            android:textColor="@color/text"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="21.4dp"
            android:layout_marginEnd="21.4dp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/main_searchView"
            android:layout_width="match_parent"
            android:layout_height="37.4dp"
            android:background="@drawable/button_main"
            android:layout_marginTop="164.6dp"
            android:layout_marginBottom="65.4dp"
            android:layout_marginStart="21.4dp"
            android:layout_marginEnd="21.4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37.4dp"
            android:layout_marginTop="220.6dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="21.4dp"
            android:layout_marginEnd="21.4dp">

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="106.6dp"
                android:layout_height="37.4dp"
                android:id="@+id/main_setSize"
                android:textColor="@color/text"
                android:text="@string/sizes"
                android:background="@drawable/button_main"
                android:textSize="14sp"
                />

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="106.6dp"
                android:layout_height="37.4dp"
                android:id="@+id/main_setPrice"
                android:textColor="@color/text"
                android:text="@string/price"
                android:background="@drawable/button_main"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                />

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="106.6dp"
                android:layout_height="37.4dp"
                android:id="@+id/main_setMore"
                android:textColor="@color/text"
                android:text="@string/moreFilter"
                android:background="@drawable/button_main"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollview_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/menuLinear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FrameLayout"
        android:background="@color/background_sub">

        <GridLayout
            android:id="@+id/grid_in_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal"
            android:layout_marginTop="21.4dp">

            <Button
                style="?android:borderlessButtonStyle"
                android:id="@+id/main_register_room"
                android:layout_gravity="top"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginStart="21.4dp"
                android:layout_marginEnd="10.7dp"
                android:background="@drawable/button_main"
                android:text="@string/sell"
                android:textColor="@color/text">

            </Button>

            <Button
                android:id="@+id/main_find_room"
                android:layout_gravity="top"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_marginStart="10.7dp"
                android:layout_marginEnd="21.4dp"
                android:background="@drawable/button_main"
                android:text="@string/find"
                android:textColor="@color/text">

            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21.4dp"
                android:layout_marginTop="13.3dp"
                android:layout_marginBottom="5dp"
                android:text="@string/favorite"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:textSize="14sp"/>

            <HorizontalScrollView
                android:layout_columnSpan="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21.4dp"
                android:id="@+id/main_scrollview_favorite" >

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:rowCount="2">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="270dp"
                        android:id="@+id/main_linear_favorite"
                        android:paddingEnd="13.3dp"
                        android:layout_column="0"
                        android:layout_row="0" >

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="270dp"
                        android:id="@+id/main_linear_favorite2"
                        android:layout_column="0"
                        android:layout_row="1" >

                    </LinearLayout>

                </GridLayout>

            </HorizontalScrollView>

        </GridLayout>


    </ScrollView>

    <!--android:background="#26000000" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/menuLinear"
        android:orientation="horizontal"
        android:background="@drawable/background_main"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            style="?android:borderlessButtonStyle"
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="@string/menu_home"
            android:layout_gravity="start"
            android:layout_marginEnd="33dp"/>
        <Button
            style="?android:borderlessButtonStyle"
            android:id="@+id/main_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="@string/menu_map"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"/>
        <Button
            style="?android:borderlessButtonStyle"
            android:id="@+id/main_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="@string/menu_setting"
            android:layout_gravity="end"
            android:layout_marginStart="33dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>